## XDG Setup
{
  # XDG Base Directory supports
  # https://wiki.archlinux.org/index.php/XDG_Base_Directory
  if [[ -z "${XDG_CONFIG_HOME}" ]]; then
    export XDG_CONFIG_HOME="${HOME}/.config"
  fi
  if [[ -z "${XDG_CACHE_HOME}" ]]; then
    export XDG_CACHE_HOME="${HOME}/.cache"
  fi
  if [[ -z "${XDG_DATA_HOME}" ]]; then
    export XDG_DATA_HOME="${HOME}/.local/share"
  fi
}

export ZDOTDIR="${XDG_CONFIG_HOME}/zsh"
source "${ZDOTDIR}/.zshenv"

export CACHE_DIR=~/.cache/zsh
export EDITOR=/usr/local/bin/nvim
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export N_PREFIX=~/.n
export NODE_PATH=$N_PREFIX/lib/node_modules
export PIPX_HOME=~/.local/pipx
export PIPX_BIN_DIR=~/.local/bin
export PATH="/usr/local/sbin:$PATH:$N_PREFIX/bin:$PIPX_BIN_DIR"
export GEOMETRY_PROMPT_PLUGINS=(exec_time virtualenv git node)
export PROMPT_GEOMETRY_GIT_TIME=false
export ANDROID_SDK_ROOT="/usr/local/share/android-sdk"
export HISTORY_FILTER_EXCLUDE=("Bearer" "youtube-dl")
export GPG_TTY=$(tty)
export DOTNET_CLI_TELEMETRY_OPTOUT=1

