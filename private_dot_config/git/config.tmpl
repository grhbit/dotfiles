# vim: ft=gitconfig
[user]
    email = {{ .email }}
    name = {{ .name }}

[core]
    precomposeunicode = true
    quotepath = false
    ignorecase = false
    pager = delta

[interactive]
    diffFilter = delta --color-only

[log]
    date = iso

[push]
    default = simple

[pull]
    ff = only

[delta]
    features = side-by-side line-numbers decorations
    syntax-theme = gruvbox-dark

[diff]
    algorithm = histogram

[merge]
    conflictstyle = zdiff3
