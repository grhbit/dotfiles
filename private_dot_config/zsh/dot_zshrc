# vi: ft=zsh
## History
export HISTFILE="${XDG_DATA_HOME}/zsh/history"
declare -r HISTFILE
export HISTSIZE=50000
export SAVEHIST=20000
setopt extended_history
setopt hist_expire_dups_first
setopt hist_ignore_dups
setopt hist_ignore_space
setopt hist_verify
setopt inc_append_history
setopt share_history
setopt combining_chars

[ -d "${XDG_DATA_HOME}/zsh" ] || mkdir -p "${XDG_DATA_HOME}/zsh"

## zinit
declare -A ZINIT
ZINIT_HOME="${XDG_DATA_HOME}/zinit/zinit.git"
ZINIT[ZCOMPDUMP_PATH]="${XDG_CACHE_HOME}/zsh/zcompdump-${ZSH_VERSION}"
ZINIT[COMPINIT_OPTS]='-C'

source "${ZINIT_HOME}/zinit.zsh"
autoload -Uz _zinit
(( ${+_comps} )) && _comps[zinit]=_zinit

zinit lucid for \
  'OMZ::lib/key-bindings.zsh' \
  'OMZ::lib/completion.zsh'

# cargo
zinit as'completion' has'cargo' nocompletions nocompile run-atpull atpull'%atclone' for \
  light-mode id-as'crates/bat' \
    atclone'cargo install bat' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/cargo-edit' \
    atclone'cargo install cargo-edit' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/cargo-update' \
    atclone'cargo install cargo-update' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/cargo-outdated' \
    atclone'cargo install --locked cargo-outdated' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/cargo-watch' \
    atclone'cargo install cargo-watch' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/exa' \
    atclone'cargo install exa' \
    atload'alias ls="exa --time-style long-iso";
           alias ll="ls -l";
           alias la="exa -lbhHigmuSa --time-style=long-iso --git --color-scale"' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/fcp' \
    atclone'cargo install fcp' \
    atload'alias cp=fcp' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/fd-find' \
    atclone'cargo install fd-find' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/git-delta' \
    atclone'cargo install git-delta' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/gitui' \
    atclone'cargo install gitui' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/hexyl' \
    atclone'cargo install hexyl' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/hyperfine' \
    atclone'cargo install hyperfine' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/navi' \
    atclone'cargo install --locked navi' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/nomino' \
    atclone'cargo install nomino' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/onefetch' \
    atclone'cargo install onefetch' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/ripgrep' \
    atclone'cargo install ripgrep' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/rtx-cli' as'null' \
    atclone'cargo install rtx-cli; rtx activate zsh > init.zsh' \
    src'init.zsh' compile'init.zsh' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/sd' \
    atclone'cargo install sd' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/starship' as'null' \
    atclone'cargo install starship; starship init zsh --print-full-init > init.zsh' \
    src'init.zsh' compile'init.zsh' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/tealdeer' \
    atclone'cargo install tealdeer' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/tokei' \
    atclone'cargo install tokei' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/xh' \
    atclone'cargo install xh' \
    'zdharma-continuum/null' \
  light-mode id-as'crates/zoxide' as'null' \
    atclone'cargo install zoxide; zoxide init zsh --no-aliases > init.zsh' \
    src'init.zsh' compile'init.zsh' \
    atload'alias zi=__zoxide_zi;
           alias z=__zoxide_z;
           alias zq="zoxide query";
           alias zqi="zoxide query -i"' \
    'zdharma-continuum/null'

# rtx
zinit as'null' has'rtx' run-atpull atpull'%atclone' for \
  light-mode id-as'rtx/direnv' \
    src'init.zsh' compile'init.zsh' \
    atclone'rtx exec --install-missing direnv -- direnv hook zsh > init.zsh' \
    'zdharma-continuum/null'

export ZSH_AUTOSUGGEST_STRATEGY=(history completion)

zinit wait lucid for \
  atload'!_zsh_autosuggest_start' 'zsh-users/zsh-autosuggestions' \
  'zsh-users/zsh-history-substring-search' \
  'zdharma-continuum/history-search-multi-word' \
  atinit'zpcompinit; zpcdreplay' 'zdharma-continuum/fast-syntax-highlighting'

export FZF_DEFAULT_OPTS='--bind ctrl-d:page-down,ctrl-u:page-up'

## Alias
alias reload="exec ${SHELL} -o no_global_rcs"
alias tmux="tmux -f ${XDG_CONFIG_HOME}/tmux/tmux.conf"
alias vi='nvim'
alias vim='nvim'
alias vimdiff='nvim -d'
alias gst='git status'
alias gc='git commit --verbose'
alias gcd='git checkout develop'
alias gcm='git checkout master'
alias -g ...='../..'
alias -g ....='../../..'

if [ -f "${ZDOTDIR}/.zshrc.local" ]; then
  source "${ZDOTDIR}/.zshrc.local"
fi
